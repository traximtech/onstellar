<script>
	jQuery(document).ready(function($) {
		$('#replenish-user-account').ajaxForm({
            url: Wo_Ajax_Requests_File() + '?f=wallet&s=replenish-user-account',
            beforeSend: function() {
              $('#replenish-user-account').find('.ball-pulse').fadeIn(100);
            },
            success: function(data) {
              scrollToTop();
              if (data['status'] == 200 && data['type'] == 'SUCCESS') {
                window.location = data['url'];
              }
              else if(data['status'] == 500){
              	$("#replenish-user-account-alert-warning").html('<div class="alert alert-danger">' + data['error'] + '</div>');
              }
              else{
                $("#replenish-user-account-alert-warning").html('<div class="alert alert-danger">' + data['details']['error_description'] + '</div>');
                }
              $('#replenish-user-account').find('.ball-pulse').fadeOut(100);
            }
        });
	});
</script>